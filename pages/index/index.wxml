<!--index.wxml-->
<view class="container">
	<view class="top-box">
		<image src="/image/login.png" mode="widthFix"></image>
		<view class="input-box">
			<view class="display-flex align-items-center input-item">
				<i class="iconfont icon-dingwei"></i>
				<van-field value="{{LoginName}}" placeholder="请输入您的登录账号" border="{{false}}" data-modal='LoginName' bind:blur="handleInputChange" />
			</view>
			<view class="color-red">长度1-10</view>
			<view class="display-flex align-items-center input-item">
				<i class="iconfont icon-dingwei"></i>
				<van-field value="{{LoginPassWord}}" type="password" placeholder="请输入您的登录密码" border="{{false}}" data-modal='LoginPassWord' bind:blur="handleInputChange" />
			</view>
			<view class="color-red">长度1-10</view>
			<view class="btn-login" bindtap="loginFunction">
				登录
			</view>
		</view>
	</view>
	<view class="footer-box">V1.0.0</view>
</view>